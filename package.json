{
  "name": "rustacean-profile",
  "version": "0.1.0",
  "description": "Tailwind CSS build configuration",
  "scripts": {
    "dev": "concurrently \"tailwindcss -i ./input.css -o ./dist/output.css --watch\" \"trunk serve --address 0.0.0.0 --port 3000\"",
    "dev:css": "tailwindcss -i ./input.css -o ./dist/output.css --watch",
    "build:dev": "tailwindcss -i ./input.css -o ./dist/output.css",
    "build:prod": "tailwindcss -i ./input.css -o ./dist/output.css --minify",
    "build": "npm run build:prod",
    "build-css": "npm run build:prod",
    "watch-css": "npm run dev:css",
    "serve": "npm run dev",
    "start": "npm run dev"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "concurrently": "^8.2.2"
  }
}

